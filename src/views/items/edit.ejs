<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

       <% include ../static/partials/messages.ejs %>

      <h1>Edit Item</h1>

      <form action="/lists/<%= item.listId %>/items/<%= item.id %>/update" method="post">

        <div class="form-group">
          <label for="description">Item description</label>
          <input value="<%= item.description %>" type="text" class="form-control" name="description" aria-describedby="descriptionHelp" placeholder="Enter Description">
        </div>

        <div class="form-group">
          <label for="isPurchased">Purchased?</label>
          <input type="checkbox" class="form-control" name="isPurchased" value=<%= item.isPurchased %> <%= item.isPurchased ? "checked" : "" %>   />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>

      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  <script>

     $(document).ready(function(){
        $('input[type="checkbox"]').change(function(){
          let value = $(this).val();
          console.log(value);
          value == 'true' ? $(this).attr('value', 'false') :  $(this).attr('value', 'true');
        });

     });

  </script>
  </body>
</html>
