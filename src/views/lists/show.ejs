<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1><%= list.title %></h1>
      <% if(currentUser.isMember()) { %>
      <a href="/lists/<%= list.id %>/edit" class="btn btn-warning">Edit List</a>
      <form style="display:initial" action="/lists/<%= list.id %>/destroy" method="item">
      <button type="submit" class="btn btn-danger">Delete List</button>
    </form>
      <% } %>

      <hr>

  <h1>Items</h1>

  <ul class="list-group">
    <% if(currentUser) { %>
    <a href="/lists/<%= list.id %>/items/new" class="btn btn-success">+</a>
    <% list.items.forEach((item) => { %>
      <li class="list-group-item">
        <p> <%= item.description %>

           <form style="display:initial" action="/lists/<%= item.listId %>/items/<%= item.id %>/update" method="item">
            <input type="checkbox" name="isPurchased" value="<%= item.isPurchased %>">
          </form>


        <form style="display:initial" action="/lists/<%= item.listId %>/items/<%= item.id %>/destroy" method="item">
          <button type="submit" class="btn btn-danger">Delete Item</button>
       </form>
         <a href="/lists/<%= item.listId %>/items/<%= item.id %>/edit" class="btn btn-warning">Edit Item</a>
        </p>
      </li>
    <% }) %>
<% } %>
  </ul>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
